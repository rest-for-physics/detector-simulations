    <variable name="Xe_density" value="5.49189" />
    <variable name="TMA_density" value="2.42" />
    <variable name="iC4H10_density" value="2.51578" />

</define>

<materials>

    <!-- {{{ Elements definition ...........................................................-->
    <element name="Hydrogen" formula="H" Z="1">
        <atom value="1.00794" />
    </element>
    <element name="Helium" formula="N" Z="2">
